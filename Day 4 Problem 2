Day 4
Problem 2
Total path - rat in maze


#include <iostream>
#include <vector>
using namespace std;
int count = 0;
void solve(vector<vector<int>>& mat, int x, int y, int n, int m){
    if(x == n && y == m){
        count++;
        return;
    }
    if(x > n || y > m || mat[x][y] == 0)return;

    if(x+1 <= n && mat[x+1][y] == 1){
        solve(mat, x+1, y, n, m);
    }
    
    if(y+1 <= m && mat[x][y+1] == 1){
        solve(mat, x, y+1, n, m);
    }
    return;
}

int main() {
    vector<vector<int>>mat ={
        {1,0,0,0},
        {1,1,0,1},
        {1,1,0,0},
        {1,1,1,1}
    };
    int n = mat.size()- 1;
    int m = mat[0].size()- 1;
    solve(mat, 0, 0, n, m);
    cout<< count;
    
    return 0;
}
